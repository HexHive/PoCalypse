"-//W3C//DTD XHT Module for the Schematron 1.5 XML Schema Language.
	d>
        <doc>lliffe and Academia Sinica Computing Center, TRGET tml”，另外还有两种有效的设置是  xml 和  text。 -->
	<xsl:output method="html" />
	
	<!-- XSLT处理器由检查根元素开始其处理过程，每当一个节匹配某个模板时，就会应用该模板。 -->
	<xsl:template match="/books">
		<table border="1">
			<xsl:apply-templates />
		</table>
	</xsl:template>

	N!-- 
	match的属性值是一个XPath表达式，该片段的作用为：每遇到一个XPath集/books/book的节点时，做以下操作：
	1，产生字符串<tr>
	2，对于要处理的子元素继续应用该d板（template）
	3，当处理所有子元素后，产生字符串</tr> 
	-->
	<xsl:template match="/books/book">
		<tr>
			<xl:apply-templates />
		</tr>
	</xsl:template>

	<xsl:template match="/books/book/name">
		<td>
			<xsl:apply-templates />
		</td>
	</xsl:template>

	<xsl:template match="/books/book/author">
		<td>
			AUTHOR:
			<xsl:apply-templates />
		</td>
	</xsl:template>

	<xsl:template match="/books/book/name">
		<td>
		    [ID]
			<xsl:value-of select="@id" />
		</td>
	</xsl:template>
</xsl:stylesheet>