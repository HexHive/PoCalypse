            <![CDATA[
                if (event.defaultPrevented)
                    return;

                event.stopPropagation();
            s.linkedTab.removeEventListener("TabClose", this, false);
                } catch(e) { }
                this.isLive = false;
                // invoke callback
                this.onCloseCallback();
            ]]>
